<Window x:Class="Course_Prerequsites_WPF.UIs.EditCoursePrerequsites"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditCoursePrerequsites" Height="650" Width="600">
    <Grid>
        <ScrollViewer HorizontalAlignment="Left" Height="500" Margin="10,51,0,0" VerticalAlignment="Top" Width="574" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}">
            <ScrollViewer.Effect>
                <DropShadowEffect/>
            </ScrollViewer.Effect>
            <StackPanel  Width="560" x:Name="mylist" Background="#FFF6A10C"/>
        </ScrollViewer>

        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="List of only courses that can be prerequsites" VerticalAlignment="Top" Height="35" Width="574" Style="{StaticResource SectionHeaderTextStyle}"/>
        <Button Content="Done" HorizontalAlignment="Left" Margin="233,568,0,0" VerticalAlignment="Top" Width="102" Height="42" FontSize="23" FontFamily="Segoe UI" FontWeight="Light"  Foreground="White" Background="#FFF6A10C" Click="Button_Click" />

    </Grid>
</Window>
