            <Label Content="Code" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="MaximumNumberOfStudents" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="56"/>
            <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="DescriptionTextBox" Canvas.Left="228" Canvas.Top="237"/>
            <Label Content="Description" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="237"/>

        </Canvas>
        <Button Content="Add Course" HorizontalAlignment="Left" Height="32" Margin="77,307,0,0" VerticalAlignment="Top" Width="224" x:Name="AddCourseButton" Click="AddCourseButton_Click"/>

    </Grid>
