<Window x:Class="Course_Prerequsites_WPF.UIs.AspecificCourse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course_Prerequsites_WPF.UIs"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="AspecificCourse" Height="700" Width="600">
    <Grid >
        <Canvas Margin="0,10,0,-36">
            <Label Content="Hours:- " HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="365" FontSize="20" Canvas.Left="30" RenderTransformOrigin="0.562,0.405"/>
            <Label Content="CourseGrade:- " HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="314" FontSize="20" Canvas.Left="30"/>
            <Label Content="PassingGrade:- " HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="262" FontSize="20" Canvas.Left="30"/>
            <Label Content="CurrentNumberOfStudents:- " HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="204" FontSize="20" Canvas.Left="30"/>
            <Label Content="Instructor:- " HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="413" Width="124" FontSize="20" Canvas.Left="30" RenderTransformOrigin="0.46,1.027"/>
            <Label Content="Code:- " HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Canvas.Top="113" Width="75" Canvas.Left="30"/>
            <Label Content="Maximum Number Of Students:- " VerticalAlignment="Bottom" Canvas.Top="155" FontSize="20" HorizontalAlignment="Left" Canvas.Left="30"/>
            <Label Content="Description:- " HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="466" FontSize="20" Canvas.Left="30"/>
            <RichTextBox  BorderBrush="Black" BorderThickness="1.5" Height="110" FontSize="20" Canvas.Left="163" Canvas.Top="480" Width="406" IsReadOnly="True">
                <FlowDocument>
                    <Paragraph>
                        <Run x:Name="Description" ForceCursor="False"  Text="RichTextBox"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox >
            <Label x:Name="Code"  FontSize="20" Content="Label" Canvas.Left="367" Canvas.Top="102" Width="193" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center">

            </Label>
            <Label x:Name="MaximumNumberOfStudents"  FontSize="20" Content="Label" Canvas.Left="367" Canvas.Top="150" Width="193" Height="42" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Label x:Name="CurrentNumberOfStudents" FontSize="20" Content="Label" Canvas.Left="367" Canvas.Top="204" Width="193"/>
            <Label x:Name="PassingGrade" Content="Label" FontSize="20" Canvas.Left="367" Canvas.Top="262" Width="193"/>
            <Label x:Name="CourseGrade" Content="Label" FontSize="20" Canvas.Left="367" Canvas.Top="314" Width="193"/>
            <Label x:Name="Hours" Content="Label" Canvas.Left="367"  FontSize="20" Canvas.Top="365" Width="193"/>
            <Label x:Name="Instructor" Content="Label"  FontSize="20" Canvas.Left="367" Canvas.Top="413" Width="193"/>
            <TextBox x:Name="CourseName" BorderBrush="Black"  TextAlignment="Center" BorderThickness="1.5" Height="43" Canvas.Left="147" TextWrapping="Wrap" Text="Course Name" Canvas.Top="32" Width="243" FontSize="24" IsReadOnly="True" />

        </Canvas>
        <Button Style="{StaticResource BorderButton}" Content="Back" x:Name="ReturnBack"  Click="ReturnBack_Click" Margin="0,10,0,617.4" Height="43" Width="93" />

    </Grid>
</Window>
