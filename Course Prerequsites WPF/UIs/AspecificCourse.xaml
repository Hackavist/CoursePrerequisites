<Window x:Class="Course_Prerequsites_WPF.UIs.AspecificCourse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course_Prerequsites_WPF.UIs"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="AspecificCourse" Height="700" Width="600">
    <Grid Margin="7,7,7,7" ShowGridLines="True" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.35*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <!-- label Data-->
        <TextBlock x:Name="CourseName" Style="{DynamicResource PageHeaderTextStyle}" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock Text="Code: " Style="{StaticResource SectionHeaderTextStyle}" Grid.Row="1" FontSize="30" VerticalAlignment="Bottom"/>
        <TextBlock Text="Max Capacity :" Style="{StaticResource SectionHeaderTextStyle}" Grid.Row="2" FontSize="28" VerticalAlignment="Bottom"/>
        <TextBlock Text="Current Capacity :" Style="{StaticResource SectionHeaderTextStyle}" Grid.Row="3" FontSize="29" VerticalAlignment="Bottom"/>
        <TextBlock Text="Course Grade :" Style="{StaticResource SectionHeaderTextStyle}" Grid.Row="4" FontSize="30" VerticalAlignment="Bottom"/>
        <TextBlock Text="Passing Grade :" Style="{StaticResource SectionHeaderTextStyle}" Grid.Row="5" FontSize="30" VerticalAlignment="Bottom"/>
        <TextBlock Text="Credit Hours :" Style="{StaticResource SectionHeaderTextStyle}" Grid.Row="6" FontSize="30" VerticalAlignment="Bottom"/>
        <TextBlock Text="Instructor :" Style="{StaticResource SectionHeaderTextStyle}" Grid.Row="7" FontSize="30" VerticalAlignment="Bottom"/>
        <TextBlock Text="Description :" Style="{StaticResource SectionHeaderTextStyle}" Grid.Row="8" FontSize="30"/>
        <TextBlock Text="Prerequsites:" Style="{StaticResource SectionHeaderTextStyle}" Grid.Row="9" FontSize="30"/>
        <!-- Real Data-->
        <TextBlock x:Name="Code" Style="{StaticResource ContentTextStyle}" Grid.Column="1" Grid.Row="1" FontSize="25" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="MaximumNumberOfStudents" Style="{StaticResource ContentTextStyle}" Grid.Column="1" Grid.Row="2" FontSize="25"/>
        <TextBlock x:Name="CurrentNumberOfStudents" Style="{StaticResource ContentTextStyle}" Grid.Column="1" Grid.Row="3" FontSize="25"/>
        <TextBlock x:Name="CourseGrade"  Style="{StaticResource ContentTextStyle}" Grid.Column="1" Grid.Row="4" FontSize="25"/>
        <TextBlock x:Name="PassingGrade" Style="{StaticResource ContentTextStyle}" Grid.Column="1" Grid.Row="5" FontSize="25"/>
        <TextBlock x:Name="Hours"  Style="{StaticResource ContentTextStyle}" Grid.Column="1" Grid.Row="6" FontSize="25"/>
        <TextBlock x:Name="Instructor"  Style="{StaticResource ContentTextStyle}" Grid.Column="1" Grid.Row="7" FontSize="25"/>
        <Grid Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="3">
            <TextBlock x:Name="Description" Style="{StaticResource ContentTextStyle}" TextWrapping="Wrap" FontSize="23" FontStretch="Normal" />
        </Grid>

        <Grid Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="3">
          
        </Grid>
        <!--Exit button-->
        <Button x:Name="ReturnBack"  Click="ReturnBack_Click" Grid.Row="0" Grid.Column="0" Content="Back" Style="{ StaticResource BorderButton}"/>

